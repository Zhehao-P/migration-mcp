# Environment variables for e2e-validation-mcp
# Copy this file to .env and update the values as needed

# Required: Path to the CloudN repository directory
CLOUDN_PATH=/path/to/your/cloudn

# Required: Path to the Regression test directory
REGRESSION_PATH=/path/to/your/regression_test

# Required: Path to the Terraform variables file
TFVARS_PATH=/path/to/your/tfvars

# Required: OpenAI API compatible key
LLM_API_KEY=XX-XX-XX-XX-XX

# Required: OpenAI API compatible base URL
LLM_BASE_URL=https://openrouter.ai/api/v1/chat/completions

# Required: OpenAI API compatible chat model name
LLM_CHAT_MODEL_NAME=anthropic/claude-3.5-sonnet

# Optional: Server host address (default: 0.0.0.0)
HOST=0.0.0.0

# Optional: Server port (default: 8001)
PORT=8001

# Optional: Data directory (default: data)
DATA_PATH=data
